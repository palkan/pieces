script(id="file_item_mst", type="x-tmpl-mustache")
  li.item
    .field.name {{name}}
    .field.size {{size}}

.section.white.pi.file-input-ex(pid="file_input")
  h1.title File input
  .content
    .inline
      .pi.button-blue.pi-file-input-wrap(pid="btn",data-on-files_selected="@host.list.data_provider(e.data)") 
        span choose file
        input.file-input(type="file") 
      .pi.pi-checkbox-wrap(data-on-selected="@host.btn.multiple(e.data)")
        label.cb-label Multiple?
        input(type="hidden")
    .pi.inline.list-container(pid="list", data-renderer="mustache(file_item_mst)")
      h2.title Selected files
      ul.list
.section.white
  .content